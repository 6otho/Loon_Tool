[Script]
# 处理艺术家/专辑视图
http-request ^https:\/\/spclient\.wg\.spotify\.com\/(artistview\/v1\/artist|album-entity-view\/v2\/album)\/ script-path=https://kelee.one/Resource/Script/Spotify/Spotify_remove_ads.js, timeout=10, tag=Spotify_UI修复

# 核心广告屏蔽（使用补丁版脚本）
http-response ^https:\/\/spclient\.wg\.spotify\.com\/(bootstrap\/v1\/bootstrap|user-customization-service\/v1\/customize)$ script-path=https://raw.githubusercontent.com/6otho/Loon_tool/main/Js/Spotify_proto_patched.js, requires-body=true, binary-body-mode=true, timeout=10, tag=Spotify_广告屏蔽

# 新增：移除随机播放限制（可选）
http-response ^https:\/\/spclient\.wg\.spotify\.com\/(playlist\/v2|experiments\/v2) script-path=https://example.com/path/to/shuffle_remover.js, tag=Spotify_随机播放解除

[MITM]
hostname = spclient.wg.spotify.com