#!name=Spotify 歌词翻译
#!desc=通过百度翻译 API 实现歌词汉化，通配所有子域名
#!loon_version=3.3+

[Argument]
appid=input,tag=百度 AppID,desc=此处填写百度翻译 AppID
securityKey=input,tag=百度密钥,desc=此处填写翻译密钥

[Rule]
# 只要是 spotify.com 下的色彩歌词接口，都进默认代理
DOMAIN-SUFFIX,spotify.com,PROXY
FINAL,DIRECT

[Script]
# 匹配任何 spotify.com 域名下的 color-lyrics/v2/track 接口
http-response ^https://[^/]+\.spotify\.com(?::443)?/color-lyrics/v2/track/.* requires-body=true,binary-body-mode=true,timeout=10,script-path=https://raw.githubusercontent.com/6otho/Loon_tool/refs/heads/main/Js/Spotify_lyrics.js,argument=[{appid},{securityKey}]

[MITM]
# 对所有 spotify.com 子域名都做解密
hostname = *.spotify.com
