#!name=Spotify 歌词翻译
#!desc=通过百度翻译 API 实现歌词汉化，通配所有子域
#!author=6otho [https://github.com/6otho]
#!homepage=https://t.me/PaKo_Ov_Chan
#!icon=https://raw.githubusercontent.com/tugepaopao/Image-Storage/master/cartoon/Cute/spotify.png
#!loon_version=3.3+

[Argument]
appid=input,tag=百度 AppID,desc=此处填写百度翻译 AppID
securityKey=input,tag=百度密钥,desc=此处填写翻译密钥

[Rule]
DOMAIN-SUFFIX,spotify.com,PROXY
FINAL,DIRECT

[Script]
http-response ^https://[^/]+\.spotify\.com(?::443)?/color-lyrics/.*/track/.* requires-body=true,binary-body-mode=true,timeout=10,script-path=https://raw.githubusercontent.com/app2smile/rules/master/js/spotify-lyric.js,argument=[{appid},{securityKey}]

[MITM]
hostname = *.spotify.com
