[Argument]
appid=input,tag=百度appid,desc=此处填写百度翻译的 AppID
securityKey=input,tag=百度密钥,desc=此处填写百度翻译的密钥

[Script]
# ✅ 只拦截 subtype=External 的歌词翻译接口（防止破坏原始歌词）
http-response ^https:\/\/.+\.spotify\.com(:443)?\/color-lyrics\/v2\/track\/\w+\?(.*)subtype=External requires-body=true, binary-body-mode=true, timeout=10, script-path=https://raw.githubusercontent.com/6otho/Loon_tool/refs/heads/main/Js/Spotify_lyrics, argument=[{appid},{securityKey}], tag=Spotify歌词翻译

[MITM]
hostname = *.spotify.com