[Argument]
appid = input,"baiduid",tag= 填写百度翻译 AppID
securityKey = input,"baidukey",tag= 填写百度翻译 Security Key

[Script]
http-response ^https:\/\/spclient\.wg\.spotify\.com\/color-lyrics\/v2\/track\/ script-path=https://raw.githubusercontent.com/app2smile/rules/master/js/spotify-lyric.js,requires-body=true,binary-body-mode=true,timeout=10,tag=Spotify歌词翻译,argument=appid=${appid}&securityKey=${securityKey}

[MITM]
hostname = spclient.wg.spotify.com
